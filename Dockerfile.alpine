FROM alpine:3

WORKDIR /workspace

# Install dependencies
RUN apk add --no-cache \
    bash \
    make \
    libtool \
    tar \
    cmake \
    python3 \
    python3-dev \
    py3-pip \
    gcc \
    git \
    curl \
    build-base \
    autoconf \
    automake \
    py3-cryptography \
    linux-headers \
    musl-dev \
    libffi-dev \
    openssl-dev \
    openssh \
    py-virtualenv \
    clang18-libclang \
    gcompat \
    libstdc++ \
    libgcc \
    g++ \
    openblas-dev \
    xsimd \
    xz \
    bsd-compat-headers \
    clang18 \
    jq

# Install Redis
ARG REDIS_REF
COPY .install/install_redis.sh /tmp/install_redis.sh
RUN chmod +x /tmp/install_redis.sh && REDIS_REF=${REDIS_REF} /tmp/install_redis.sh

# Install uv and Python environment
RUN curl -LsSf https://astral.sh/uv/install.sh | env UV_INSTALL_DIR="/usr/local/bin" sh
ENV PATH="/usr/local/bin:${PATH}"
RUN uv venv --python=3.11 /opt/.venv
ENV VIRTUAL_ENV=/opt/.venv
ENV PATH="/opt/.venv/bin:${PATH}"
COPY requierments_docker.txt /workspace/requierments.txt
RUN uv pip install -r requierments.txt
